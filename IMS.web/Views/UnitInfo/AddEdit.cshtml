@model IMS.Models.Entity.UnitInfo
@{
    // Set browser tab title to "Update Store" if Model has an ID, otherwise set it to "Add Store"
    ViewData["Title"] = Model.Id > 0 ? "Update Unit Information" : "Add Unit Information";
}
@* <partial name="_Notification" /> *@

<!-- Add CSS style to make the background grey -->
<style>
    body {
        background-color: #f5f7fd; /* Set background color to grey */
    }
</style>


@if (Model.Id > 0)
{
    <h1><b>Edit Unit Info</b></h1>
}
else
{
    <h1><b>Create Unit Info</b></h1>
}

<form method="post" asp-action="AddEdit">
    <div class="row">
        <div class="col-8">
            <div class="form-group">
                <label asp-for="UnitName" class="control-label"></label>
                <input asp-for="UnitName" class="form-control" />
                <span asp-validation-for="UnitName" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <div class="form-check">
            <input asp-for="IsActive" class="form-check-input" type="checkbox" />
            <label class="form-check-label" asp-for="IsActive">Active</label>
        </div>
    </div>


    <br />



    <div class="form-group">
        <div class="row">
            <div class="col-8">
                <button type="submit" class="btn btn-primary float-start ">@((Model.Id > 0) ? "Update" : "Create")</button>
                <a asp-action="Index" class="btn btn-secondary float-end" asp-controller="UnitInfo">Back to List</a>
            </div>
        </div>
    </div>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
