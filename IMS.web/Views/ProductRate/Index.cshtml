@model IEnumerable<IMS.Models.Entity.ProductRateInfo>
@{
    ViewData["Title"] = "Index";
}

<!-- Add CSS style to make the background grey -->
<style>
    body {
        background-color: #F5F0FF;
    }
</style>


<div class="row col-12">
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(p => p.CatagoryInfoId)</th>
                <th>@Html.DisplayNameFor(p => p.CostPrice) </th>
                <th>@Html.DisplayNameFor(p => p.ProductInfo.UnitInfoId)</th>
                <th>@Html.DisplayNameFor(p => p.Quantity)</th>
                <th>@Html.DisplayNameFor(p => p.RemainingQuantity)</th>
                 <th>@Html.DisplayNameFor(p => p.RackInfoId)</th>
                <th>@Html.DisplayNameFor(p => p.ProductInfoId)</th>
                <th>@Html.DisplayNameFor(p => p.BatchNo)</th>
                <th> Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var items in Model)
            {
                <tr>
                    <td> @items.CatagoryInfo.CatagoryName </td>
                    <td> @items.CostPrice </td>
                    <td> @items.ProductInfo.UnitInfo.UnitName </td>
                    <td> @items.Quantity </td>
                    <td> @items.RemainingQuantity </td>
                    <td> @items.RackInfo.RackName </td>
                    <td> @items.ProductInfo.ProductName </td>
                    <td> @items.BatchNo </td>

                    <td>
                        <a class="btn btn-primary " asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
@*                         <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('Are You Sure About That!!!')" asp-route-id="@items.Id">Delete</a>
 *@                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-start" asp-action="AddEdit">AddNew</a>
    </div>

</div>
