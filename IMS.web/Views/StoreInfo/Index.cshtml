@model IEnumerable<IMS.Models.Entity.StoreInfo>
@{
    ViewData["Title"] = "Index";
}


<partial name="_Notification"/>

<!-- Add CSS style to make the background grey -->
<style>
    body {
        background-color: #F5F0FF;
    }
</style>


    <div class="row col-12">
        <table class="table table-bordered">
            <thead>
                <tr>
                    <th>Store Name </th>
                    <th> Address </th>
                    <th> Phone Number </th>
                    <th> Registration No</th>
                    <th> Pan No </th>
                    <th> IsActive </th>
                    <th> Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var items in Model)
                {
                    <tr>
                        <td> @items.StoreName </td>
                        <td> @items.Address </td>
                        <td>@items.PhoneNumber</td>
                        <td> @items.RegistrationNo</td>
                        <td> @items.PanNo</td>
                        <td> @items.IsActive </td> 
           
                        <td>
                            <a class="btn btn-primary " asp-action="AddEdit" asp-route-id="@items.Id">Edit</a>
                                   @* <a asp-action="Details" asp-route-id="@items.Id" class="btn btn-info">Details</a> *@
                            <a class="btn btn-danger" asp-action="Delete" onclick="return confirm('Are You Sure About That!!!')" asp-route-id="@items.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
